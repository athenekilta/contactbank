extends layout

block content

  // Header 
  section.section
    .container.has-text-centered
      .heading
        h1.title.is-1 Athene Angels Contact Bank

  // Search field
  section.section
    .container
      .heading
        h2.title.is-4 Search for contacts

      input(type="text" id="contactinput").input

  // Displays results
  section.section
    .container
      table.table
        thead
          tr
            th Name
            th Email
            th Keywords
        tbody#tablerows
